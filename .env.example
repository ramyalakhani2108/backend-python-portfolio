# Environment variables for Portfolio Backend
# Copy this file to .env and fill in your values

# Project
PROJECT_NAME=Portfolio API
DEBUG=false

# Database
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/portfolio_db

# CORS - Comma-separated list of allowed origins
# For development: ["http://localhost:3000", "http://localhost:8080"]
# For production: ["https://yourdomain.com"]
CORS_ORIGINS=["*"]

# JWT Security (scaffolded for future use)
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash
